<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simplewidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <GridLayout
        android:id="@+id/canvas_grid_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_centerVertical="true"
        >
        <ImageView
            android:id="@+id/img_grid_1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            />
        <ImageView
            android:id="@+id/img_grid_2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            />
        <ImageView
            android:id="@+id/img_grid_3"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            />
        <ImageView
            android:id="@+id/img_grid_4"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/img_grid_5"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/img_grid_6"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/img_grid_7"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"/>
        <ImageView
            android:id="@+id/img_grid_8"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            />
        <ImageView
            android:id="@+id/img_grid_9"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:layout_marginTop="10dp"
            />
    </GridLayout>


</RelativeLayout>
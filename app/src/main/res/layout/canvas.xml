<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/canvas_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/canvas_top_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_sticker_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            />
        <Button
            android:id="@+id/btn_back_color_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배경색변경"
            />
        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저장"
            />
    </LinearLayout>
    <GridLayout
        android:id="@+id/canvas_grid_view"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_below="@id/canvas_top_linear"


        >
        <ImageView
            android:id="@+id/img_grid_1"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:src="@drawable/rectangle"/>
        <ImageView
            android:id="@+id/img_grid_2"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:src="@drawable/rectangle"/>
        <ImageView
            android:id="@+id/img_grid_3"
            android:layout_rowWeight="1"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:src="@drawable/rectangle"/>
        <ImageView
            android:id="@+id/img_grid_4"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:src="@drawable/rectangle"/>
        <ImageView
            android:id="@+id/img_grid_5"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:src="@drawable/rectangle"/>
        <ImageView
            android:id="@+id/img_grid_6"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:src="@drawable/rectangle"/>
        <ImageView
            android:id="@+id/img_grid_7"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:src="@drawable/rectangle"/>
        <ImageView
            android:id="@+id/img_grid_8"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:src="@drawable/rectangle"/>
        <ImageView
            android:id="@+id/img_grid_9"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:layout_rowWeight="1"
            android:src="@drawable/rectangle"/>
    </GridLayout>

    <ImageView
        android:id="@+id/img_trash"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:src="@drawable/trash_can"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:visibility="invisible"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>